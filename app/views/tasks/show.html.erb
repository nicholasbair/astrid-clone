<div class="row">
  <div class="col-md-6 col-md-offset-3 form-card">
    <h1 class="<%= @task.status %>">
      <%= @task.content %>
      <a href="<%= edit_user_task_path(current_user, @task) %>">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
      </a>
    </h1>
    <p>Belongs to: <%= @task.list.title %> list</p>
    <div class="row">
      <%= update_status(@task) %>
      <div class="col-md-3">
        <%= button_to "Delete Task", user_task_path(current_user, @task),
          :method => :delete, :class => "btn btn-danger delete-btn",
          data: { confirm: "Wait, what...are you sure?" }
        %>
      </div>
    </div>
  </div>
</div>
