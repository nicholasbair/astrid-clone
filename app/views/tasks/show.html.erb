<%= link_to "<- Back to list", user_list_path(current_user, @task.list) %>

<div class="row">
  <div class="col-md-6 col-md-offset-3 form-card">
    <h1 class="<%= @task.status %>">
      <%= @task.content %> 
      <a href="<%= edit_user_task_path(current_user, @task) %>">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
      </a>
    </h1>
    <p>Belongs to: <%= @task.list.title %> list</p>

    <%= form_for [current_user, @task] do |f| %>
      <% if @task.complete? %>
        <%= f.hidden_field :status, :value => "incomplete" %>
        <%= f.submit "Mark incomplete", :class => "btn btn-success" %>
      <% else %>
        <%= f.hidden_field :status, :value => "complete" %>
        <%= f.submit "Mark complete", :class => "btn btn-success" %>
      <% end %>
    <% end %>
  </div>
</div>
