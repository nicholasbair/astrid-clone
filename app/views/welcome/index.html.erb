<div class="jumbotron card">
  <h1>Welcome to Astrid-Clone</h1>
  <p>A Rails task manager web app with Twilio SMS reminders</p>
  <% if current_user %>
    <p><%= link_to "My Lists", user_lists_path(current_user), :class => "btn btn-primary btn-lg" %></p>
  <% else %>
    <p><%= link_to "Sign Up", new_user_registration_path, :class => "btn btn-primary btn-lg" %></p>
  <% end %>
</div>
